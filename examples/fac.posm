; File: ./examples/fac.posm
; Run: ./d/bin/r -l ./examples fac 0 10
;
; fac(1) ->
;     1;
; fac(N) ->
;     N * fac(N - 1).

label 0          ; fac(1)
  push -1
  load           ; N
  push 1
  neq
  cjump 1
  push 1
  ret

label 1          ; fac(N)
  push -1
  load           ; N
  push -1
  load           ; N
  push 1
  sub            ; N - 1
  call 0 1       ; fac(N - 1).
  mul            ; N * fac(N - 1).
  ret
